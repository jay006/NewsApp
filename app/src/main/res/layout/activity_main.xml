<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1000"
    tools:context="com.example.joker.newsapp.MainActivity">

    <LinearLayout
        android:id="@+id/swipe_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sports_categories_espn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/catagories_back"
            android:onClick="loadNews"
            android:padding="5dp"
            android:text="ESPN"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tech_categories_hacker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/catagories_back"
            android:onClick="loadNews"
            android:padding="5dp"
            android:text="Tech"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/general_categories_abc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/catagories_back"
            android:onClick="loadNews"
            android:padding="5dp"
            android:text="ABC News"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/health_categories_medical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/catagories_back"
            android:onClick="loadNews"
            android:padding="5dp"
            android:text="Health"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/business_categories_cnbc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/catagories_back"
            android:onClick="loadNews"
            android:padding="5dp"
            android:text="CNBC"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/gaming_categories_ign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/catagories_back"
            android:onClick="loadNews"
            android:padding="5dp"
            android:text="Gaming"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/swipe_textView"
        android:layout_margin="2dp"
        android:background="@color/white_1000"
        android:clipToPadding="false"
        android:paddingBottom="5dp"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:paddingTop="5dp" />


</RelativeLayout>
